div(class='modal fade' tabindex='-1' role='dialog' id='app-modal')
    div(class='modal-dialog modal-dialog-centered modal-lg' role='document')
        div(class='modal-content')
            div(class='modal-header')
                h5(class='modal-title' id='app-modal-title')
                button(type='button' class='close' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times
            div(class='modal-body' id='app-modal-body')
            div(class='modal-footer')
                div(class='modal-error-msg' id='app-modal-error')
                button(type='button' class='btn btn-primary' id='app-modal-btn-confirm') Save changes
                button(type='button' class='btn btn-secondary' id='app-modal-btn-cancel' data-dismiss='modal') Close

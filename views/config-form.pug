form(class='form-container container')
    div
        div(class='form-group-title') Options
        div(class="form-edit-group-panel shadow-sm p-2 mb-3 bg-white rounded border")
            div(class='form-group')
                label(for='form-edit-name') Name
                input(class='form-control' type='text' name='name' id='form-edit-name' required)
            div(class='form-group')
                label(for='form-edit-port') Port
                input(class='form-control' type='number' name='port' id='form-edit-port' required)
    div
        div(class='form-group-title') Target
        div(class="form-edit-group-panel shadow-sm p-2 mb-3  bg-white rounded border")
            div(class='form-group')
                label Protocol
                div
                    div(class="form-check form-check-inline")
                        input(class="form-check-input" type="radio" name="protocol" id="form-edit-target-http" value="http" checked)
                        label(class="form-check-label" for="form-edit-target-http") http
                    div(class="form-check form-check-inline")
                        input(class="form-check-input" type="radio" name="protocol" id="form-edit-target-https" value="https" checked)
                        label(class="form-check-label" for="form-edit-target-https") https
            div(class='form-group')
                label(for='form-edit-target-host') Host
                input(class='form-control' type='text' name='host' id='form-edit-target-host' required)
            div(class='form-group')
                label(for='form-edit-target-port') Port
                input(class='form-control' type='number' name='port' id='form-edit-target-port')
    div
        div(class='form-group-title') Advanced Options
        div(class="form-edit-group-panel shadow-sm p-2 mb-3 bg-white rounded border")
            div(class='form-check')
                input(type='checkbox' class='form-check-input' id='form-edit-secure')
                label(class='form-check-label' for='form-edit-secure') Secure

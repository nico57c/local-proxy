form(class='form-container container')
    div
        div(class='form-group-title') Options
        div(class="form-edit-group-panel shadow-sm p-2 mb-3 bg-white rounded border")
            div(class='form-group')
                label(for='form-edit-name') Name
                input(class='form-control' type='text' name='name' id='form-edit-name' required value=data.name)
            div(class='form-group')
                label(for='form-edit-port') Port
                input(class='form-control' type='number' name='port' id='form-edit-port' required value=data.port)
    div
        div(class='form-group-title') Target
        div(class="form-edit-group-panel shadow-sm p-2 mb-3  bg-white rounded border")
            div(class='form-group')
                label Protocol
                div
                    div(class="form-check form-check-inline")
                        <!-- ':' is required at the end in database for proxy lib -->
                        input(class="form-check-input" type="radio" name="target_protocol" id="form-edit-target-http" value="http" checked= data.target_protocol==='http:')
                        label(class="form-check-label" for="form-edit-target-http") http
                    div(class="form-check form-check-inline")
                        <!-- ':' is required at the end in database for proxy lib -->
                        input(class="form-check-input" type="radio" name="target_protocol" id="form-edit-target-https" value="https" checked= data.target_protocol==='https:')
                        label(class="form-check-label" for="form-edit-target-https") https
            div(class='form-group')
                label(for='form-edit-target-host') Host
                input(class='form-control' type='text' name='target_host' id='form-edit-target-host' required value=data.target_host)
            div(class='form-group')
                label(for='form-edit-target-port') Port
                input(class='form-control' type='number' name='target_port' id='form-edit-target-port' value=data.target_port)
    div
        div(class='form-group-title') Advanced Options
        div(class="form-edit-group-panel shadow-sm p-2 mb-3 bg-white rounded border")
            div(class='form-check')
                input(type='checkbox' class='form-check-input' id='form-edit-secure' name='secure' checked=data.secure)
                label(class='form-check-label' for='form-edit-secure') Secure
